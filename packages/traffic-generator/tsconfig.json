{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "removeComments": false,
    "allowUnusedLabels": true,
    "allowUmdGlobalAccess": true,
    "inlineSources": false,
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES7",
      "DOM.Iterable",
      "ES2015",
      "ESNext",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "rootDirs": [
      "../hexo-seo/packages/js-prototypes/src",
      "../electron-browser/src",
      "./src"
    ],
    "baseUrl": "./",
    "outDir": "./dist",
    "noLib": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "typeAcquisition": {
    "enable": true,
    "include": [
      "electron"
    ]
  },
  "buildOnSave": true,
  "compileOnSave": true,
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}